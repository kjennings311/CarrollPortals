}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2> Users </h2>
        <ol class="breadcrumb">
            <li>
                <a href="~/Home/Index">Home</a>
            </li>

            <li class="active">
                <strong>Property Damage Claims</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="RowsContatiner animated fadeInRight" style="min-height:120vh">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5> Property Damage Claims <small></small></h5>
                @{
                    if (@Model.RoleType == "Administrator")
                    {

                        <div class="ibox-tools">
                            <a disabled="disabled" class="btnEdit" href="#" onclick="ToggleEdit('FormPropertyDamageClaim');"><i class="fa fa-edit"></i> Edit</a>

                            <a disabled="disabled" class="btnDelete" href="#">
                                <i class="fa fa-trash"></i> Delete
                            </a>

                            <a style="color:#1ab394;" href="#" onclick="ToggleAdd('FormPropertyDamageClaim');">
                                <i class="fa fa-plus-circle"></i> Add New
                            </a>
                        </div>
                        }
                    }
                    </div>
            <div class="ibox-content">
                <table class="table table-striped table-bordered table-hover dtprops" width="100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th> Property </th>
                            <th> Incident DateTime  </th>
