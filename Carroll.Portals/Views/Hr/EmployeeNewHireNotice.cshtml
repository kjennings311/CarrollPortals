<div class="RowsContatiner animated fadeInRight">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content" style="margin-left:20%; padding-top:0px;">
                <form id="submitform" onsubmit="return false;">
                    <p class="c1 c8" style="margin-left:90px;">
                        <span class="c7">
                            <img src="~/img/newhirenotice.png">
                        </span>
                    </p>
                    <p class="c1 c8"  style="margin-left: 10%;">
                        <span class="c7"> NEW HIRE NOTICE </span>
                    </p>
                    <p class="c1">
                        <span class="c0"> Employee Name:    <input type="text" id="empname" />        Start Date:<input type="date" id="startdate" />  </span>
                    </p>
                    <p class="c1">
                        <span class="c0">Employee Social Security Number:<input type="text" id="securitynumber" style="width:31%;" /> </span>
                    </p>
                    <p class="c1">
                        <span class="c0">Email Address: <input type="email" id="email" style="width:43%;" /> </span>
                    </p>
                    <p class="c1">
                        <span class="c4">(do not leave blank)</span>
                    </p>
                    <p class="c1">
                        <span class="c0">Manager:<input type="text" id="manager" style="width:46.5%;" /> </span>
                    </p>
                    <p class="c1">
                        <span class="c0">Location:<input type="text" id="location" style="width:46.5%;" /> </span>
                    </p>
                    <p class="c1">
                        <span class="c0">Position: Exempt <input type="text" id="exempt" />   Non-exempt <input type="text" id="nonexempt" style="width:15%;"  /> </span>
                    </p>
                    <p class="c1">
                        <span class="c0">Position <input type="text" id="position" style="width:46.5%;" /> </span>
                    </p>
                    <p class="c1">
                        <span class="c4">(please make sure it is an approved Carroll Management Group title)</span>
                    </p>
                    <p class="c1">
                        <span class="c0">Status (full-time / part-time) :  <select id="status1" > <option value="Full Time"> Full Time </option><option value="Part Time"> Part Time </option> </select></span>
                    </p>
                    <p class="c1">
                        <span class="c0">Wage/Salary <input type="text" id="salary" style="width:30%;" /> </span>
                    </p>
                    <p class="c1">
                        <span class="c0">Allocation <input type="text" id="allocation" style="width:31.5%;" /> </span>
                    </p>
                    <p class="c1">
                        <span class="c0">Employee Signature _____________________________________________     Date_______________</span>
                    </p>
                    <p class="c1">
                        <span class="c0">Manager&rsquo;s Authorizing Signature ________________________________ Date ______________</span>
                    </p>
                    <p class="c1">
                        <span class="c0">RPM Signature____________________________________________________Date_______________</span>
                    </p>
                    <p class="c1" style="width:75%;">
                        <span class="c6">
                            Manager Responsibilities: Complete the New Hire Notice, sign the form, and submit to Human Resources via email at
                            HRNotifications@carrollmg.com. This form kicks off the launching on Onboarding in Paylocity.
                        </span>
                    </p>

                    <br /> <br />
                    <div id="status"> </div>
                    <div class="col-md-12" style="text-align:center;margin-bottom:20px;">

                        <input type="button" id="Submit" value="Submit" class="btn btn-primary" />  <button class="btn btn-success" disabled id="print"> <i class="fa-print fa"> </i> Print </button> <button disabled class="btn btn-success" id="pdf"> <i class="fa-file-pdf-o fa"> </i> Pdf </button>

                    </div>
                </form>

            </div>
        </div>
    </div>

</div>




@if (ViewBag.ErrorMessage == "AuthorizationRequired")
