        var inputs = document.getElementsByTagName('input');
        for (i = 0; i < inputs.length; i++) {
            inputs[i].disabled = true;
        }

        var inputs = document.getElementsByTagName('select');
        for (i = 0; i < inputs.length; i++) {
            inputs[i].disabled = true;
        }

        var inputs = document.getElementsByTagName('textarea');
        for (i = 0; i < inputs.length; i++) {
            inputs[i].disabled = true;
        }



    </script>
